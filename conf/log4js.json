{
  "customBaseDir": "d:/log/",
  "customDefaultAtt": {
    "type": "dateFile",
    "absolute": true,
    "alwaysIncludePattern": true
  },
  "appenders": [
    {
      "type": "console",
      "category": "console"
    },
    {
      "pattern": "monitor_log/yyyyMMddhh.txt",
      "category": "logDebug"
    },
    {
      "pattern": "monitor_log/yyyyMMddhh.txt",
      "category": "logInfo"
    },
    {
      "pattern": "monitor_log/yyyyMMddhh.txt",
      "category": "logWarn"
    },
    {
      "pattern": "monitor_log/yyyyMMddhh.txt",
      "category": "logErr"
    }
  ],
  "replaceConsole": true,
  "levels": {
    "logDebug": "DEBUG",
    "logInfo": "DEBUG",
    "logWarn": "DEBUG",
    "logErr": "DEBUG"
  }
}